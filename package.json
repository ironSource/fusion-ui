{
    "name": "fusion-ui",
    "version": "5.4.1",
    "description": "UI library created by ironSource",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ironSource/fusion-ui.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@ironsrc/fusion-ui"
    },
    "scripts": {
        "ng": "ng",
        "prepare": "husky install",
        "serve-docs": "ng serve --port 4300 fusion-docs",
        "test-docs": "ng test fusion-docs",
        "serve-native": "mkdir -p dist/fusion-ui && cp projects/fusion-ui/package.json dist/fusion-ui/package.json && watch 'npm run build:fusion-native' projects --wait=20 -d",
        "test-ui": "ng test fusion-ui",
        "test-ui-ci": "npm run test-ui -- --watch=false --browsers=ChromeHeadless",
        "build": "bash scripts/build.sh",
        "build:lib:dev": "npm run build -- dev",
        "build:lib:prod": "npm run build -- production",
        "build:fusion-ui": "ng build fusion-ui",
        "build:fusion-native": "ng build fusion-native",
        "styles": "ts-node -P css-bundle/tsconfig.styles.bundle.json css-bundle",
        "build-styles": "npm run styles && sass dist/fusion-ui/fusion.theme.scss dist/fusion-ui/fusion.theme.css -s compressed && npm run copy-sass-vars && npm run copy-sass-mixins && npm run move-grid-sass && npm run copy-css-fonts-v1 && npm run copy-css-fonts",
        "copy-sass-vars": "mkdir -p dist/fusion-ui/style && cp -R ./projects/fusion-ui/src/style/scss/vars dist/fusion-ui/style",
        "copy-sass-mixins": "cp -R ./projects/fusion-ui/src/style/scss/mixins dist/fusion-ui/style",
        "move-grid-sass": "cp -R projects/fusion-ui/src/style/scss/grid.scss dist/fusion-ui/style/grid.scss && sass dist/fusion-ui/style/grid.scss dist/fusion-ui/style/grid.css -s compressed",
        "copy-css-fonts-v1": "sass ./projects/fusion-ui/src/style/scss/fonts_v1.scss > dist/fusion-ui/style/fonts_v1.css -s compressed",
        "copy-css-fonts": "sass ./projects/fusion-ui/src/style/scss/fonts.scss dist/fusion-ui/style/fonts.css -s compressed",
        "build-styles-native": "npm run styles -- true && sass dist/fusion-ui/native/fusion.theme.scss dist/fusion-ui/native/fusion.theme.css -s compressed",
        "build-native-frameworks": "schematics ./projects/fusion-schematics/collection.json:fusion-frameworks --debug=false --force --componentsFilePath=projects/fusion-native/src/app/app-config.ts --outputDir=dist/fusion-ui",
        "build-native-frameworks-old": "schematics ./projects/fusion-schematics/collection.json:fusion-frameworks-old --debug=false --force --componentsFilePath=projects/fusion-native/src/app/app-config.ts --outputDir=dist/fusion-ui/native",
        "build-native-content": "schematics ./projects/fusion-schematics/collection.json:fusion-native --debug=false --force --outputDir=dist/fusion-ui/native",
        "lint": "ng lint",
        "schematics": "which schematics",
        "schm:debug": "node --inspect-brk $(which schematics) ./projects/fusion-schematics/collection.json:fusion-native --debug=false --dry-run true --force --outputDir=dist/fusion-ui/native",
        "schm:build": "tsc -p projects/fusion-schematics/tsconfig.schematics.json",
        "schm:watch": "tsc -p projects/fusion-schematics/tsconfig.schematics.json --watch",
        "format:check": "prettier --config ./prettier.config.js --check 'projects/**/*{.ts,.json}'",
        "format:pretty": "prettier --config ./prettier.config.js --write 'projects/**/*{.ts,.json}'",
        "prettier": "prettier",
        "build:mfe:dev": "VERSION=5.0.0-rc.12 npm run build:mfe -- -c dev",
        "build:mfe": "ng run fusion-ui:build-mfe",
        "deploy:mfe": "aws s3 rm s3://fusion-ui-mfe-bundles/bundles/v$VERSION --recursive && aws s3 cp ./dist/fusion-mfe s3://fusion-ui-mfe-bundles/bundles/v$VERSION --recursive --exclude 'index.html'",
        "release": "standard-version"
    },
    "lint-staged": {
        "**/*{.ts,.json}": "prettier --config ./prettier.config.js --write"
    },
    "private": true,
    "schematics": "./projects/fusion-schematics/collection.json",
    "dependencies": {
        "@angular-devkit/architect": "^0.1200.3",
        "@angular/animations": "^12.0.3",
        "@angular/common": "^12.0.3",
        "@angular/compiler": "^12.0.3",
        "@angular/core": "^12.0.3",
        "@angular/elements": "^12.0.3",
        "@angular/forms": "^12.0.3",
        "@angular/platform-browser": "^12.0.3",
        "@angular/platform-browser-dynamic": "^12.0.3",
        "@angular/router": "^12.0.3",
        "@webcomponents/webcomponentsjs": "^2.5.0",
        "chart.js": "^3.5.1",
        "core-js": "^2.6.11",
        "document-register-element": "^1.14.10",
        "prismjs": "^1.22.0",
        "rxjs": "^6.6.3",
        "tslib": "^2.0.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~12.0.3",
        "@angular-devkit/schematics-cli": "^0.1100.7",
        "@angular-eslint/builder": "12.1.0",
        "@angular-eslint/eslint-plugin": "12.1.0",
        "@angular-eslint/eslint-plugin-template": "12.1.0",
        "@angular-eslint/schematics": "12.1.0",
        "@angular-eslint/template-parser": "12.1.0",
        "@angular/cli": "~12.0.3",
        "@angular/compiler-cli": "^12.0.3",
        "@angular/language-service": "^12.0.3",
        "@angularclass/hmr": "^3.0.0",
        "@commitlint/cli": "^14.1.0",
        "@commitlint/config-conventional": "^14.1.0",
        "@types/jasmine": "~3.6.0",
        "@types/jasminewd2": "^2.0.8",
        "@types/node": "~12.7.12",
        "@types/react": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "4.23.0",
        "@typescript-eslint/parser": "4.23.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.28.0",
        "husky": "^7.0.4",
        "jasmine-core": "~3.7.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~6.3.3",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "karma-spec-reporter": "0.0.32",
        "lint-staged": "^12.1.2",
        "ng-packagr": "^12.0.3",
        "ngx-build-plus": "^12.0.1",
        "prettier": "^2.1.2",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "sass": "^1.34.1",
        "sass-loader": "^12.0.0",
        "scss-bundle": "^2.5.1",
        "standard-version": "^9.3.2",
        "ts-node": "^7.0.1",
        "typescript": "4.2.4",
        "vue": "^2.6.12",
        "watch": "^1.0.2"
    }
}
