{
    "compilerOptions": {
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "declarationMap": true,
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "types": [],
        "lib": ["dom", "es2018"]
    },
    "include": [
        "react/index.ts",
        "react/core.ts",
        "vue/index.ts",
        "vue/core.ts",
        "vue/v2/index.ts",
        "vue/v2/core.ts",
        "vue/v3/index.ts",
        "vue/v3/core.ts",
        "vue/v3/utils.ts"
    ]
}
